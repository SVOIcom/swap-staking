{% extends layoutName %}

{% block content %}


    <div class="a-overview__header">
        <p class="a-overview__title">Staking</p>
        <br>
        <br>
    </div>
    <div id="pageContent">
        <div class="a-overview__body col-md-12 row">

            <fw-component type="StateView" name="userAccountState" state="walletNotConnected">

                <state activeStates="active">
                    <fw-component type="caption" name="userWallet" ></fw-component>
                    <br>
                    <fw-component type="holder" name="farmsList"></fw-component>
                </state>

                <state activeStates="notExists">
                    Farming account not created<br>
                    <fw-component type="PrimaryButton" @click="createAccount">Create account</fw-component>
                    <br>
                </state>

                <state activeStates="error">
                    <h2 style="text-align: center">Error while loading</h2>
                    <br>
                </state>

                <state activeStates="walletNotConnected">
                    <h2 style="text-align: center">Wallet not connected</h2>
                    <br>
                </state>
            </fw-component>

        </div>

        <fw-component type="popup" static unclosable name="waitPopup" caption="Operation in progress..." data-backdrop="static">
            <h3 style="text-align: center">Operation in progress...</h3>
            <div class="progress-bar progress-bar-warning progress-bar-striped progress-bar-animated"
                 role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                 style="width: 100%;height: 20px;"></div>
        </fw-component>

        <script type="fpage-script" src="/app/pages/index.mjs"></script>
    </div>





{% endblock %}
